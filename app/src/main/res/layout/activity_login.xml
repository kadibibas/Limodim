<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.example.kadibibas.limodim.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="420dp"
        android:layout_height="51dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="-1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo2"/>


    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="דואר אלקטרוני"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:textColorHint="#ff5500"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/etpassword"
        app:layout_constraintBottom_toTopOf="@+id/etpassword"
        android:layout_marginBottom="19dp" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="סיסמא"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:textStyle="bold"
        android:textColorHint="#ff5500"
        android:gravity="right"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="251dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="התחבר"
        android:textStyle="bold"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bttt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="91dp"
        app:layout_constraintTop_toTopOf="@+id/etpassword" />



    <TextView
        android:id="@+id/tvRegisterHere"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:text="הרשמה"
        android:textStyle="bold"
        android:textColor="#ff5500"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="86dp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/bLogin"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="86dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff5500"
        android:textStyle="bold"
        android:text="סטטוס התחברות"

        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/etEmail"
        android:layout_marginStart="124dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail"
        android:layout_marginLeft="124dp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="38dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/etpassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/bLogin"
        android:layout_marginLeft="38dp" />

</android.support.constraint.ConstraintLayout>
