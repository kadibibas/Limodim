<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logo4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kadibibas.limodim.kesher"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo2"/>


    </android.support.v7.widget.Toolbar>


    <Button
        android:id="@+id/button2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/arrow1"
        android:layout_marginStart="4dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/kadi"
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:background="@drawable/mail"
        android:layout_marginStart="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageButton2"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/imageButton2"
        android:layout_width="88dp"
        android:layout_height="71dp"
        android:background="@drawable/telephone"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/imageButton3"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/imageButton3"
        android:layout_width="88dp"
        android:layout_height="68dp"
        android:background="@drawable/fac"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageButton2"
        tools:layout_constraintBaseline_creator="1" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דרכי התקשרות"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginEnd="56dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="149dp"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>
